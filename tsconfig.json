{
  "compilerOptions": {
    "baseUrl": ".",
    "paths" : {
      "@common/*" : ["components/common/*"],
      "@components/*" : ["components/*"],
      "@hooks/*" : ["hooks/*"],
      "@pages/*" : ["pages/*"],
      "@services/*" : ["services/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "/**/*.ts", "**/*.tsx", "hooks/useAuth.ts", "components/common/Chart.jsx"],
  "exclude": ["node_modules"]
}
